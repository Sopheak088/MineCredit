@model IEnumerable<BIDC_CreditContracts.Models.GuarantorViewKhmer>

<div id="ListGuarantorKhmer">
    @if (ViewBag.Error != null)
    {
        <b class="alert-danger">@ViewBag.Error</b>
    }
    <h3>List Guarantor</h3>
    @foreach (var item in Model)
    {

        <fieldset>
            <table class="table">
                <tr>
                    <th>ឈ្មោះអ្នកធានា</th>
                    <th>អត្តសញ្ញាណប័ណ្ឌ/លិខិតឆ្លងដែន</th>
                    <th>កាលបរិច្ឆេទចេញផ្សាយ</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.GuarantorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Passport)</td>
                    <td>@Html.DisplayFor(modelItem => item.PassportDate)</td>
                </tr>

                <tr>
                    <td colspan="3" align="center">
                        @Ajax.ActionLink("Delete", "DeleteKhmer", "Guarantors",
                        new { GuarantorName = item.GuarantorName, GuarantorPassportNo = item.Passport, isSaved = item.isSaved },
                        new AjaxOptions
                        {
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "ListGuarantorKhmer"
                        },
                        new { @class = "btn btn-danger" })
                    </td>
                </tr>
            </table>
        </fieldset>
    }
</div>

