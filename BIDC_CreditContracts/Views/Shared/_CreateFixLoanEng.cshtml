@model IEnumerable<BIDC_CreditContracts.Models.FixLoanEnglish>

<div id="ListFixLoan">
    @if (ViewBag.Error != null)
    {
        <b class="alert-danger">@ViewBag.Error</b>
    }
    <h3>List Fix Loan</h3>
    @foreach (var item in Model)
    {

        <fieldset>
            <table class="table">
                <tr>
                    <td>Type:</td>
                    <td>@Html.DisplayFor(modelItem => item.KindOfCollateral)</td>
                    <td>Ownership:</td>
                    <td>@Html.DisplayFor(modelItem => item.Ownership)</td>

                </tr>
                <tr>
                    <td>Title deed number:</td>
                    <td>@Html.DisplayFor(modelItem => item.TitleDeedNumbers)</td>
                    <td>Total size in:</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalSizeIn)</td>
                </tr>
                <tr>
                    <td>Price per sqm in:</td>
                    <td>@Html.DisplayFor(modelItem => item.PricePerSqmIn)</td>
                    <td>Total price in:</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalPriceIn)</td>
                </tr>

                <tr>
                    <td colspan="4" align="center">
                        @Ajax.ActionLink("Delete", "Delete", "FixLoan",
                        new { Ownership = item.Ownership, TitleDeedNumbers = item.TitleDeedNumbers, TotalSizeIn = item.TotalSizeIn, PricePerSqmIn = item.PricePerSqmIn, isSaved = item.isSaved },
                        new AjaxOptions
                        {
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "ListFixLoan"
                        },
                        new { @class = "btn btn-danger" })
                    </td>
                </tr>
            </table>
        </fieldset>
    }
</div>


